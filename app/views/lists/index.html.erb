<div class="cards">
  <% @lists.each do |list| %>
    <%= link_to list_path(list) do%>
      <% if list.photo.attached? %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path list.photo.key, height: 300, width: 400, crop: :fill %>)">
      <% else %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url()">
      <% end %>

          <%= list.name.upcase %>
        </div>
      <%= link_to "delete", list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      <% end %>

  <% end %>
</div>
