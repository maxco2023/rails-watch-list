<h1><%= @list.name %></h1>
<br>
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-trip">
        <img src="<%= bookmark.movie.poster_url %>" />
          <div class="card-trip-infos">
            <h2><%= bookmark.movie.title %></h2>
            <p><%= bookmark.comment %></p>
            <div><%= link_to "Delete this movie", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-warning" %></div>
          </div>
          </div>
      <br>
    <% end %>
<br>
<%= link_to "Add a movie with comment", new_list_bookmark_path(@list), class:"btn btn-primary" %>
<%= link_to "Go back to full list", lists_path, class:"btn btn-secondary" %>
<%= link_to "Delete this list", list_path(@list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger" %>
