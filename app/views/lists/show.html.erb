<h1><%= @list.name %></h1>
<br>
  <div class="card">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-trip">
        <img src="<%= bookmark.movie.poster_url %>" />
            <div class="div1"><%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-ghost3" %></div>
          <div class="card-trip-infos">
            <h2><%= bookmark.movie.title %></h2>
            <p><strong>Synopsis :</strong> <%= bookmark.movie.overview %></p>
            <p><strong>Score :</strong> <%= bookmark.movie.rating %>/10</p>
            <p><strong>Review :</strong> <%= bookmark.comment %></p>
          </div>
      </div>
    <% end %>
  </div>
<br>
<%= link_to "Add a movie", new_list_bookmark_path(@list), class:"btn btn-ghost1" %>
<%= link_to "Back to full list", lists_path, class:"btn btn-ghost2" %>
<%= link_to "Modify this list", edit_list_path(@list), class:"btn btn-ghost2" %>
<%= link_to "Delete this list", list_path(@list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-ghost" %>
